				{
					"name": "Get Template Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/templates/{{template_name}}",
							"host": ["{{base_url}}"],
							"path": ["api", "templates", "{{template_name}}"]
						},
						"description": "Get details of a specific template"
					}
				},
				{
					"name": "Create Template",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"{{template_name}}\",\n    \"category\": \"{{template_category}}\",\n    \"language\": \"{{language_code}}\",\n    \"components\": [\n        {\n            \"type\": \"BODY\",\n            \"text\": \"{{template_text}}\"\n        },\n        {\n            \"type\": \"FOOTER\",\n            \"text\": \"{{template_footer}}\"\n        }\n    ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/templates",
							"host": ["{{base_url}}"],
							"path": ["api", "templates"]
						},
						"description": "Create a new WhatsApp template"
					}
				},
				{
					"name": "Delete Template",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/templates/{{template_name}}",
							"host": ["{{base_url}}"],
							"path": ["api", "templates", "{{template_name}}"]
						},
						"description": "Delete a WhatsApp template"
					}
				}
			]
		},
