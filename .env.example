# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/whatsapp_bulk_campaign

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h

# WhatsApp API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_VERIFY_TOKEN=your-verify-token
META_VERIFY_TOKEN=your-meta-verify-token
WAAPI_KEY=your-waapi-key

# File Upload Configuration
MAX_FILE_SIZE=5
UPLOAD_DIR=uploads

# Credit Configuration
DEFAULT_CREDITS=100
MIN_TRANSFER_AMOUNT=10

# Rate Limiting
RATE_LIMIT_MAX=100

# Campaign Configuration
MAX_CAMPAIGN_RECIPIENTS=1000
DELAY_BETWEEN_MESSAGES=1000
MAX_RETRIES=3

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@whatsapp-bulk.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=app.log

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=3600

# AWS S3 Configuration (if using S3 for file storage)
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=your-bucket-name