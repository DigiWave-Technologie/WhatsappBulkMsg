{
  "info": {
    "name": "WhatsApp Bulk Campaign - User Management",
    "description": "Collection for testing user management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"superadmin1\",\n    \"password\": \"SuperAdmin@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.token) {",
                  "    pm.environment.set('auth_token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"TestUser@123\",\n    \"role\": \"user\",\n    \"email\": \"test@example.com\",\n    \"firstName\": \"Test\",\n    \"lastName\": \"User\",\n    \"mobileNumber\": \"+1234567890\",\n    \"permissions\": {\n        \"virtual\": true,\n        \"personal\": true,\n        \"internationalPersonal\": false,\n        \"internationalVirtual\": false\n    }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/createUser",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "createUser"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/users",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "users"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userId\": \"{{user_id}}\",\n    \"firstName\": \"Updated\",\n    \"lastName\": \"User\",\n    \"email\": \"updated@example.com\",\n    \"mobileNumber\": \"+1987654321\",\n    \"isActive\": true,\n    \"permissions\": {\n        \"virtual\": true,\n        \"personal\": true,\n        \"internationalPersonal\": true,\n        \"internationalVirtual\": true\n    }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/updateUser",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "updateUser"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/deleteUser/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "deleteUser", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"currentPassword\": \"current_password\",\n    \"newPassword\": \"NewPassword@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/changePassword",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "changePassword"]
            }
          }
        },
        {
          "name": "Force Password Reset",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userId\": \"{{user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/forcePasswordReset",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "forcePasswordReset"]
            }
          }
        },
        {
          "name": "Lock Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userId\": \"{{user_id}}\",\n    \"reason\": \"Suspicious activity detected\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/lockAccount",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "lockAccount"]
            }
          }
        },
        {
          "name": "Unlock Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userId\": \"{{user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/unlockAccount",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "unlockAccount"]
            }
          }
        },
        {
          "name": "Generate API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/generate-api-key",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "generate-api-key"]
            }
          }
        },
        {
          "name": "Revoke API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/revoke-api-key",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "revoke-api-key"]
            }
          }
        },
        {
          "name": "Get Security Audit Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/security-audit",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "security-audit"]
            }
          }
        },
        {
          "name": "Get Active Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/active-sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "active-sessions"]
            }
          }
        }
      ]
    }
  ]
} 