{
	"info": {
		"_postman_id": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
		"name": "WhatsApp API Collection",
		"description": "Collection for testing WhatsApp API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login to get JWT token"
					}
				}
			]
		},
		{
			"name": "WhatsApp Configuration",
			"item": [
				{
					"name": "Configure WhatsApp",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"whatsappBusinessAccountId\": \"{{whatsapp_business_account_id}}\",\n    \"phoneNumberId\": \"{{phone_number_id}}\",\n    \"accessToken\": \"{{access_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/whatsapp/configure",
							"host": ["{{base_url}}"],
							"path": ["api", "whatsapp", "configure"]
						},
						"description": "Configure WhatsApp settings"
					}
				},
				{
					"name": "Get WhatsApp Config",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/whatsapp/config",
							"host": ["{{base_url}}"],
							"path": ["api", "whatsapp", "config"]
						},
						"description": "Get current WhatsApp configuration"
					}
				}
			]
		},
		{
			"name": "WhatsApp Messages",
			"item": [
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"to\": \"{{recipient_phone}}\",\n    \"templateName\": \"{{template_name}}\",\n    \"languageCode\": \"{{language_code}}\",\n    \"components\": []\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/whatsapp/send",
							"host": ["{{base_url}}"],
							"path": ["api", "whatsapp", "send"]
						},
						"description": "Send a WhatsApp message using template"
					}
				}
			]
		},
		{
			"name": "WhatsApp Templates",
			"item": [
				{
					"name": "Get Templates",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/whatsapp/templates",
							"host": ["{{base_url}}"],
							"path": ["api", "whatsapp", "templates"]
						},
						"description": "Get available message templates"
					}
				},
				{
					"name": "Create Template",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"{{template_name}}\",\n    \"language\": \"{{language_code}}\",\n    \"category\": \"{{template_category}}\",\n    \"components\": [\n        {\n            \"type\": \"BODY\",\n            \"text\": \"{{template_text}}\"\n        }\n    ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/whatsapp/templates",
							"host": ["{{base_url}}"],
							"path": ["api", "whatsapp", "templates"]
						},
						"description": "Create a new message template"
					}
				}
			]
		}
	]
} 