{
    "info": {
        "name": "Campaign Management API",
        "description": "Collection for managing WhatsApp bulk message campaigns",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Campaign Management",
            "item": [
                {
                    "name": "Create Campaign",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Summer Promotion Campaign\",\n    \"templateId\": \"{{template_id}}\",\n    \"targetType\": \"individual\",\n    \"contactGroupId\": \"{{group_id}}\",\n    \"scheduledAt\": \"2024-03-20T10:00:00Z\",\n    \"metadata\": {\n        \"description\": \"Summer sale promotion campaign\",\n        \"tags\": [\"promotion\", \"summer-sale\"]\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/campaigns",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns"]
                        },
                        "description": "Create a new campaign"
                    }
                },
                {
                    "name": "Get All Campaigns",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns?page=1&limit=10&status=draft&type=individual&startDate=2024-03-01&endDate=2024-03-31",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "status",
                                    "value": "draft"
                                },
                                {
                                    "key": "type",
                                    "value": "individual"
                                },
                                {
                                    "key": "startDate",
                                    "value": "2024-03-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2024-03-31"
                                }
                            ]
                        },
                        "description": "Get all campaigns with optional filters"
                    }
                },
                {
                    "name": "Get Campaign by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}"]
                        },
                        "description": "Get a specific campaign by ID"
                    }
                },
                {
                    "name": "Update Campaign",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Updated Summer Promotion\",\n    \"templateId\": \"{{template_id}}\",\n    \"contactGroupId\": \"{{group_id}}\",\n    \"scheduledAt\": \"2024-03-21T10:00:00Z\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}"]
                        },
                        "description": "Update an existing campaign"
                    }
                },
                {
                    "name": "Delete Campaign",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}"]
                        },
                        "description": "Delete a campaign"
                    }
                },
                {
                    "name": "Start Campaign",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}/start",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}", "start"]
                        },
                        "description": "Start a campaign"
                    }
                },
                {
                    "name": "Pause Campaign",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}/pause",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}", "pause"]
                        },
                        "description": "Pause a running campaign"
                    }
                },
                {
                    "name": "Resume Campaign",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}/resume",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}", "resume"]
                        },
                        "description": "Resume a paused campaign"
                    }
                },
                {
                    "name": "Cancel Campaign",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}/cancel",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}", "cancel"]
                        },
                        "description": "Cancel a campaign"
                    }
                },
                {
                    "name": "Get Campaign Stats",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}/stats",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}", "stats"]
                        },
                        "description": "Get statistics for a campaign"
                    }
                },
                {
                    "name": "Get Campaign Reports",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/campaigns/{{campaign_id}}/reports?status=sent&startDate=2024-03-01&endDate=2024-03-31",
                            "host": ["{{base_url}}"],
                            "path": ["campaigns", "{{campaign_id}}", "reports"],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "sent"
                                },
                                {
                                    "key": "startDate",
                                    "value": "2024-03-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2024-03-31"
                                }
                            ]
                        },
                        "description": "Get delivery reports for a campaign"
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "your_auth_token_here",
            "type": "string"
        },
        {
            "key": "campaign_id",
            "value": "campaign_id_here",
            "type": "string"
        },
        {
            "key": "template_id",
            "value": "template_id_here",
            "type": "string"
        },
        {
            "key": "group_id",
            "value": "group_id_here",
            "type": "string"
        }
    ]
} 